            VerticalTextAlignment="Center" />
        <Label
            Grid.Row="5"
            Grid.Column="2"
            BackgroundColor="Gray"
            HorizontalTextAlignment="Center"
            Text="9"
            VerticalTextAlignment="Center" />
        <Label
            Grid.Row="5"
            Grid.Column="3"
            BackgroundColor="Orange"
            HorizontalTextAlignment="Center"
            Text="-"
            VerticalTextAlignment="Center" />




        <Label
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            BackgroundColor="Gray"
            HorizontalTextAlignment="Center"
            Text="0"
            VerticalTextAlignment="Center" />

        <Label
            Grid.Row="6"
            Grid.Column="2"
            BackgroundColor="Gray"
            HorizontalTextAlignment="Center"
            Text="."
            VerticalTextAlignment="Center" />
        <Label
            Grid.Row="6"
            Grid.Column="3"
            BackgroundColor="Orange"
            HorizontalTextAlignment="Center"
            Text="="
            VerticalTextAlignment="Center" />
