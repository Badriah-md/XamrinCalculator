            VerticalTextAlignment="Center" />
        <Label
            Grid.Row="4"
            Grid.Column="3"
            BackgroundColor="Orange"
            HorizontalTextAlignment="Center"
            Text="+"
            VerticalTextAlignment="Center" />



        <Label
            Grid.Row="5"
            Grid.Column="0"
            BackgroundColor="Gray"
            HorizontalTextAlignment="Center"
